<div class="container">
    <div class="alert alert-secondary text-center">
        <h3>All Posts</h3>
    </div>

    <table class="table table-bordered">
        <thead class="bg-dark text-center">
            <tr class="text-white">
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>AllowComments</th>
            </tr>
        </thead>
        <tbody class="text-center">
            {{#each posts}}
                <tr>
                    <td>{{_id}}</td>
                    <td>{{title}}</td>
                    <td>{{description}}</td>
                    <td>{{status}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

